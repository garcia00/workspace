package br.com.j.hemopa.digital.bean;

import java.io.Serializable;
import java.util.List;

import javax.inject.Inject;

import br.com.j.hemopa.digital.model.Usuario;
import br.com.j.hemopa.digital.repository.SetorAtividades;
import br.com.j.hemopa.digital.service.CadastroUsuarioService;
import br.com.j.hemopa.digital.util.FacesMessages;

public class UsuariosMB implements Serializable{

	private static final long serialVersionUID = 1L;
	
	public static final String NAVEGACAO = "/usuario-form?faces-redirect=true";

	
	@Inject
	private Usuario usuario;
	
	@Inject
	private CadastroUsuarioService cadastroUsuarioService;
	
	@Inject
	private SetorAtividades setorAtividades;
	
	private List<Usuario>Servidores;
	
	public String getNavegacao() {

		return PessoasMB.NAVEGACAO;

	}
	
	public UsuariosMB() {
		usuario = new Usuario();
	}
	
	public String prepararNovaUsuario() {
		usuario = new Usuario();
		return getNavegacao();
	}

	public List<Usuario> getServidores() {
		return Servidores;
	}

	public void setServidores(List<Usuario> servidores) {
		Servidores = servidores;
	}
	
	public void salvar() {
		
		this.usuario = cadastroUsuarioService.salvar(usuario);
		
		FacesMessages.addInfoMessage("Usuario cadastrado.");

	}

	public SetorAtividades getSetorAtividades() {
		return setorAtividades;
	}

	public void setSetorAtividades(SetorAtividades setorAtividades) {
		this.setorAtividades = setorAtividades;
	}
	

}
